            <TextView
                android:id="@+id/Text_L9"
                android:layout_width="580dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@color/zxing_custom_possible_result_points"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_R1"
                android:layout_width="580dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/zxing_custom_possible_result_points"
                android:text=""
                android:textSize="36sp" />

            <TextView
                android:id="@+id/text_R2"
                android:layout_width="580dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@color/zxing_custom_possible_result_points"
                android:text=""
                android:textSize="36sp" />

            <TextView
                android:id="@+id/text_R3"
                android:layout_width="580dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@color/zxing_custom_possible_result_points"
                android:text=""
                android:textSize="36sp" />

            <TextView
                android:id="@+id/text_R4"
                android:layout_width="580dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@color/zxing_custom_possible_result_points"
                android:text=""
                android:textSize="36sp" />

            <TextView
                android:id="@+id/text_R5"
                android:layout_width="580dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@color/zxing_custom_possible_result_points"
                android:text=""
                android:textSize="36sp" />
            <TextView
                android:id="@+id/text_R6"
                android:layout_width="580dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@color/zxing_custom_possible_result_points"
                android:text=""
                android:textSize="36sp" />
            <TextView
                android:id="@+id/text_R7"
                android:layout_width="580dp"
